<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/news_item_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginBottom="15dp"
    android:background="@drawable/raw_background"
    android:gravity="top"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/legend_image"
        android:layout_width="wrap_content"
        android:layout_height="350dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:adjustViewBounds="true"
        android:layout_marginBottom="5dp"
        android:scaleType="fitCenter"
        android:background="@color/yellow"
        ads:srcCompat="@drawable/legend_valkyrie" />

    <TextView
        android:id="@+id/legend_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/legend_tagline"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:text="Смелая, дерзкая, пылкая и свирепая Кайри Имахара не гнушается давать взятки и преступать закон"
        android:textColor="#4a4a49"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/legend_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/legend_image"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:text="Валькирия"
        android:textColor="#000000"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/legend_tagline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/legend_title"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:text="Крылатый мститель"
        android:textColor="#4a4a49"
        android:textSize="14sp" />
</RelativeLayout>