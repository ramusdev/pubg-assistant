<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <stroke
                android:width="2dp"
                android:color="@color/grey_light_light" />
            <corners
                android:radius="5dp" />
            <padding
                android:right="10dp"
                android:left="10dp"
                android:top="2dp"
                android:bottom="2dp"/>
        </shape>
    </item>
    <item>
        <bitmap
            android:gravity="right"
            android:color="@color/grey_light_light"
            android:src="@android:drawable/arrow_down_float" />
    </item>
</layer-list>